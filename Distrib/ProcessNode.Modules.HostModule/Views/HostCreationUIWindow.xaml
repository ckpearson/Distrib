<metro:Window x:Class="ProcessNode.Modules.HostModule.Views.HostCreationUIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://schemas.codeplex.com/elysium"
        xmlns:mpara="http://schemas.codeplex.com/elysium/params"
        xmlns:prism="http://www.codeplex.com/prism"
        Title="Configuration for Process Host Creation" MinWidth="525" MinHeight="400" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="328*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>
        
        <Frame Grid.Row="0"
               Margin="10"
               Content="{Binding ProviderUI}" 
               HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,5,0,5">
            <Button Content="Cancel" IsCancel="True" Margin="0,0,5,0" />
            <Button Content="Accept" Command="{Binding AcceptCommand}" IsDefault="True" Margin="5,0,5,0"/>
        </StackPanel>
    </Grid>
</metro:Window>
